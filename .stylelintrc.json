{
  "customSyntax": "postcss-styled-syntax",
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-declaration-use-variable"],
  "rules": {
    "unit-disallowed-list": [
      ["px", "em", "in", "cm", "mm", "pt", "pc", "ex", "ch", "vmin", "vmax"],
      {
        "ignoreProperties": {
          "px": [
            "border",
            "border-bottom",
            "border-right",
            "border-top",
            "border-left",
            "border-width",
            "border-top-width",
            "border-right-width",
            "border-bottom-width",
            "border-left-width",
            "border-radius"
          ]
        }
      }
    ],
    "media-query-no-invalid": null,
    "no-descending-specificity": null
  }
}
