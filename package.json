{
  "private": true,
  "name": "douro-ui",
  "description": "Douro UI is a Design System for all Metyis projects and partners.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Douro-ui/design-system"
  },
  "author": "Metyis Porto",
  "bugs": "https://github.com/Douro-ui/design-system/issues",
  "keywords": [
    "Douro UI",
    "Metyis",
    "Design System"
  ],
  "license": "MIT",
  "scripts": {
    "build:storybook": "storybook build",
    "format": "prettier --write '**/*.{js,ts,jsx,tsx,mts,mjs,cjs,json,md}'",
    "lerna:build": "lerna run build",
    "lerna:version": "npx lerna version --conventional-commits --yes",
    "lerna:publish": "npx lerna publish from-git --yes --loglevel=silly",
    "lint": "npx eslint **/packages/**/*.{ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "prettier:fix": "prettier --write --ignore-path .gitignore ."
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.3.3",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@eslint/js": "^9.0.0",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-storybook": "^0.8.0",
    "globals": "^15.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.0.8",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vite": "^5.2.9"
  },
  "resolutions": {
    "tar": "^6.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn run lint:fix"
    ],
    "*.{ts,tsx,json,md,scss,yaml,yml}": [
      "yarn run prettier:fix"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10.5.0"
  },
  "workspaces": [
    "packages/**"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
